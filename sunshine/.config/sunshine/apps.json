{
    "apps": [
        {
            "auto-detach": true,
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "desktop.png",
            "name": "Desktop",
            "prep-cmd": [
                {
                    "do": "sunshine_display.sh",
                    "undo": "sunshine_display.sh"
                }
            ],
            "wait-all": true
        },
        {
            "auto-detach": true,
            "detached": [
                "setsid steam steam://open/bigpicture"
            ],
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "steam.png",
            "name": "Steam Big Picture",
            "prep-cmd": [
                {
                    "do": "sunshine_display.sh",
                    "undo": "sunshine_display.sh"
                }
            ],
            "wait-all": true
        }
    ],
    "env": {
        "PATH": "$(PATH):$(HOME)/.local/bin"
    }
}